extends layout

block content
  h1= title
  - let items = results
  div(class="container-fluid")
    div(class="row")
      each item, index in results  
        div(class="col-sm-2", onclick=`buy(${index})`)
          p #{item.Bank_name} 
          p #{item.Bank_place}
          p #{item.limit}
  script.
    function buy(index) {
      alert("You purchased item " + index);
    }
